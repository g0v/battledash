//- module
mixin authpanel
  .inner.card.shadow.mt-2.mx-a.p-0.border-0.authpanel.signup: .card-body.p-0
    .closebtn(data-ldcv-set="")
    .vertical-center.p-4.info.position-absolute.h-100.w-50.bg-dark.text-light
      .text-left
        .d-none(data-info="failed")
          h2.mb-4.font-weight-bold Login Failed.
          p You might have signed up with another email / password before. please try:
          ul
            li try other password / login methods
            li check spelling in your email
            li #[a(href="/auth/reset/",style="color:#0ff",target="_blank") reset your password]
            li #[a(href="#",onclick="lda.ldcvmgr.toggle('contact');",style="color:#0ff") contact us] directly

        div(data-info="default")
          if block
            block
          else
            h2.mb-4.font-weight-bold
              | Battle Dash
              img(src="/assets/img/c/logo/battledash.svg",style="width:32px;vertical-align:super")
            p 在這裡建立屬於你的活動、提案

      //-.position-absolute.text-sm(style="bottom:20px;right:20px")
        span Service Provided by Battle Dash
        img(src="/assets/img/c/logo/battledash.svg",style="height:1.3em;vertical-align:-.2em")
    .form.bg-white.w-50(style="margin-left:50%")
      ul.nav.nav-tabs.pt-2(
      onclick="this.parentNode.classList.toggle('login');this.parentNode.classList.toggle('signup')")
        li.nav-item.ml-2: a.nav-link(data-action="signup") SIGNUP
        li.nav-item: a.nav-link(data-action="login") LOGIN  
      .px-3.pb-4.pt-3.text-left
        .form-group
          label Email
          input.form-control.form-control-sm(name="email",placeholder="Email as Your Account Name")
          .invalid-feedback not a valid email
        .form-group(data-show="signup")
          label Display Name
          input.form-control.form-control-sm(name="displayname",placeholder="such as 'J. Doe'")
          .invalid-feedback should not be empty
        .form-group
          label Password
          input.form-control.form-control-sm(name="passwd",placeholder="Password, at least 8 chars",type="password")
          .invalid-feedback invalid password
        .form-group
          .text-center.form-text.text-muted.small
            | by signin you agree to our #[a(href="/tos/",target="_blank") Terms] & #[a(href="/privacy/",target="_blank") Privacy Policy]
        .btn.btn-success.btn-block.disabled.ld-ext-right(data-action="submit")
          span(data-show="login") LOGIN
          span(data-show="signup") SIGN UP
          .ld.ldld.bare.em-1
        .float-right.small.mt-1: a(href="/auth/reset/") forget password? »
        .float-left.small.mt-1(data-show="signup")
          .form-check
            input.form-check-input(name="newsletter",type="checkbox")
            label.form-check-label subscribe newsletter
        br
        .sep.sep-text.my-4: span or login with
        .row
          .col-sm: .btn.btn-primary.btn-block.btn-sm(onclick="lda.auth.fb()") #[i.i-fb] Facebook
          .col-sm: .btn.btn-outline-dark.btn-block.btn-sm(onclick="lda.auth.google()") #[i.i-google] Google

  //-+script("/js/modules/core/auth.js")
