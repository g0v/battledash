//- module
- if(!ctrl.navtop) { ctrl.navtop = {placeholder: true, shown: true}; }
- if(!ctrl.navtop.className) { ctrl.navtop.className = "navbar-light bg-light" };
if ctrl.navtop.shown
  nav#nav-top.navbar.navbar-expand-lg.fixed-top(
  class=ctrl.navtop.className,
  data-transition=ctrl.navtop.transition,
  data-transition-target=ctrl.navtop.transitionTarget)
    a.navbar-brand(href="/") Battle Dash
    button.navbar-toggler(type="button",data-toggle="collapse",
    data-target="#nav-top-content"): span.navbar-toggler-icon
    #nav-top-content.collapse.navbar-collapse
      ul.navbar-nav.ml-auto
        li.nav-item: a.nav-link(href="/pricing/") 訂價
        li.nav-item.dropdown
          a.nav-link.dropdown-toggle(href="#",data-toggle="dropdown"): .avatar
          .dropdown-menu.dropdown-menu-right
            a.dropdown-item(href="/me/") 個人資料
            .dropdown.divider
            a.dropdown-item(href="/me/settings/") 設定
            a.dropdown-item(href="#") 登出
  if ctrl.navtop.placeholder
    #nav-top-placeholder
