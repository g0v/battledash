block head
  +css("css/landing/index.css")
block body
  +nbr(1)
  div(style="height:100%")
    .m-auto(style="width:1024px")
      h1.mb-0 提案名稱
      .mb-2: small.text-muted @第三十四屆公民科技獎助金
      p
        each i in [1,2,3,4,5,6,7,8,9]
          span 提案簡述
      .btn-group.mr-2
        .btn.btn-outline-secondary.btn-sm 成果授權
